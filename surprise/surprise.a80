		device	zxspectrum128

@DEBUG = 0

		include "../kernel/constants.inc"

;;-----------------------------------------------------------------------------
	macro border n
	  if DEBUG
	    if n > 0
		ld	a,n
	    else
		xor	a
	    endif
		out	(254),a
	  endif
	endm

	macro blik frames, place, color
		dw	frames + 0,	 place << 8 | color
		dw	frames + 8,	 place << 8 | 0
	endm

