flakejbarvy	border	2
		ld	a,(act128page)
		call	xchg.bnk+3

		ld	hl,attrs1
		ld	de,attrs2
		ld	bc,#D800
.loop0:		inc	l
	dup 30
		ld	a,(hl)
		dec	l
		ex	af,af'
		ld	a,(hl)
		or	a
		jr	nz,$+3
		ld	a,(de)
		ld	(bc),a
		ex	af,af'
		ld	(hl),a
		inc	l
		inc	l
		inc	e
		inc	c
	edup
		ld	a,(hl)
		dec	l
		ex	af,af'
		ld	a,(hl)
		or	a
		jr	nz,$+3
		ld	a,(de)
		ld	(bc),a
		ex	af,af'
		ld	(hl),a
		inc	l
		inc	e
		inc	c
		ld	a,(hl)
		or	a
		jr	nz,$+3
		ld	a,(de)
		ld	(bc),a
		inc	hl
		inc	de
		inc	bc
		ld	a,#DB
		cp	b
		jp	nz,.loop0

		border	5
		dec	hl
.ptr:		ld	de,attr_story
		ld	a,(de)
		or	a
		jr	z,.a
		cp	$ff
		jr	z,.q
		dec	a
		ld	(de),a
		jr	.storede+4

.q:		ld	bc,$0218 ;; jr $+4
		ld	(.storede),bc
		xor	a
.a:		ld	(hl),a
		ld	bc,-32
		add	hl,bc
		inc	de
	dup 22
		ld	a,(de)
		inc	de
		ld	(hl),a
		add	hl,bc
	edup
		ld	a,(de)
		inc	de
		ld	(hl),a
.storede:	ld	(.ptr+1),de

		border	3
.ypos:		ld	a,0
		inc	a
		ld	(.ypos+1),a
		ld	l,a
		ld	h,high sintab
		ld	a,(hl)
		and	63	; 62 ak bude predrotovana predloha ob-dva
		rlca
		rlca
		ld	bc,pattern
		ld	l,a
		ld	h,c
		add	hl,hl
		add	hl,hl
		add	hl,bc
		ld	(surprise_rut.ptr_pattern+1),hl
		border	0
		ret

