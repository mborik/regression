scradrtab:
.i = 0
	dup 256
		db	((((.i & #C0) | ((.i & #38) >> 3) | ((.i & 7) << 3)) << 5) & #FF)
.i = .i + 1
	edup
.i = 0
	dup 256
		db	((((.i & #C0) | ((.i & #38) >> 3) | ((.i & 7) << 3)) << 5) >> 8) | #C0
